{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
        "es6": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        // We use 4 space indent at Evaneos
        "indent": [2, 4],
        "no-nested-ternary": 0,
        "no-underscore-dangle": 0,
        "react/jsx-indent": [2, 4],
        // We use the react-require loader which require automatically React when using jsx
        "react/react-in-jsx-scope": 0,
        "import/no-unresolved": [2, {
            "ignore": [
                "__app_modules__",
                // Peer dependancies
                "react",
                "redux",
                "react-dom",
                "react-redux",
                "react-router",
                "react-router-redux",
                "history",
                "react-helmet",
            ]
        } ]
    }
}
