{
	"presets": ["react", "es2015"],
	"plugins": [
		// Make optional the explicit import of React in JSX files
		"react-require"
	],
	"env": {
		"development": {
			"plugins": [
				["react-transform", {
					"transforms": [{
						"transform": "react-transform-hmr",
						"imports": ["react"],
						"locals": ["module"]
					}]
				}]
			]
		}
	}
}